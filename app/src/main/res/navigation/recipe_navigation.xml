<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.recipeappproject.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.example.recipeappproject.FavoriteFragment"
        android:label="@string/title_favourite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.recipeappproject.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.recipeappproject.AboutUsFragment"
        android:label="AboutUsFragment" />

</navigation>